{
  "name": "hono-remix-adapter-drizzle-supabase-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "preview": "pnpm run build && wrangler pages dev",
    "tail": "wrangler pages deployment tail --project-name hono-remix-adapter-drizzle-supabase-app",
    "deploy:pages": "pnpm run build && wrangler pages deploy",
    "dev": "remix vite:dev",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "start": "wrangler pages dev",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "cf-typegen": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "seed": "export $(cat .dev.vars | xargs) && psql $DATABASE_URL -f supabase/seed.sql"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/cloudflare": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/server-runtime": "^2.15.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.46.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.12",
    "hono-remix-adapter": "^0.5.2",
    "isbot": "^4.4.0",
    "lucide-react": "^0.462.0",
    "postgres": "^3.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-flat-routes": "^0.6.5",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@hono/vite-dev-server": "^0.17.0",
    "@remix-run/dev": "^2.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.28.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^4.3.2",
    "wrangler": "^3.91.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
